{
  "references": [{ "path": "./client" }, { "path": "./server" }],

  "compilerOptions": {
    "paths": {
      "@client/*": ["./client/src/*"],
      "@server/*": ["./server/src/*"]
    },

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true
  }
}
